- model_class = Overlay
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = image_tag @overlay.image_url.to_s
%p
  %strong= model_class.human_attribute_name(:date_from) + ':'
  %br
  = @overlay.date_from
%p
  %strong= model_class.human_attribute_name(:date_to) + ':'
  %br
  = @overlay.date_to
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @overlay.position

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), overlays_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_overlay_path(@overlay), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), overlay_path(@overlay), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
